@helper Btn(string name, string onClick, string icon = "", string id = "", string addclass = "")
{

    if (icon != "")
    {
        <input @if (id != "") { <text> id="@id" </text> } class="btn btn-primary @addclass" type="button" style="width:auto;height:29px;border: none;border-radius: 3px;" onclick="@onClick;return false;" value="@name" /><span class='glyphicon glyphicon-@icon'></span>
    }
    else
    {
        <input @if (id != "") { <text> id="@id" </text> } class="btn btn-primary  @addclass" type="button" style="width:auto;height:29px;border: none;border-radius: 3px;" onclick="@onClick;return false;" value="@name" />
    }
}
@helper BtnOld(string name, string onClick, string icon = "", string id = "")
{

    if (icon != "")
    {
        <button @if (id != "") { <text> id="@id" </text> } class="btn btn-primary " onclick="@onClick;return false;"><span class='glyphicon glyphicon-@icon'></span>@name</button>
    }
    else
    {
        <button @if (id != "") { <text> id="@id" </text> } class="btn btn-primary " onclick="@onClick;return false;">@name</button>
    }
}
@helper ToolbarBtn(string name, string onClick, string icon = "", string id = "")
{

    if (icon != "")
    {
        var iconstr = "";
        if (icon.IndexOf(' ') > 0)
        {
            iconstr = icon;
        }
        else
        {
            iconstr = "glyphicon glyphicon-" + icon;
        }
        <button @if (id != "") { <text> id="@id" </text> } class="btn btn-white btn-primary " onclick="@onClick;return false;"><span class='@iconstr'></span> @name</button>
    }
    else
    {
        <button @if (id != "") { <text> id="@id" </text> } class="btn btn-white btn-primary" onclick="@onClick;return false">@name</button>
    }

}
