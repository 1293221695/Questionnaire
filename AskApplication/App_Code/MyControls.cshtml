@helper FormBtn(bool cancelIsClose, string title = "保 存")
{
    <div style="width:75%;margin:0px auto">
        <input type="submit" class="btn btn-primary" value="@title" />
        @if (cancelIsClose == true)
        {
            <input type="button" class="btn btn-default" onclick="window.close();" value="取 消" style="float:right" />
        }
        else
        {
            <input type="button" class="btn btn-default" onclick="GoBack();" value="取 消" style="float:right" />
        }

    </div>
}
